<div id="challenges_form">
  <%= form_for @challenge, :html => {:multipart => true} do |f| %>
    <%if @challenge.errors.any?%>
      <% @challenge.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%= msg %></div>
      <% end %>
    <% end %>

    <%= hidden_field_tag :location_ids %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, required: true, class: 'form-control', autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :image_url %>
      <%= cl_image_upload_tag(:image_url) %>
    </div>

    <div class="row">
      <div class="col-xs-6">
        <div id="mapAreaChallengeCreation" style="width:100%; height:555px;"></div>
      </div>
      <div class="col-xs-6">
        <div class="locations">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <%= f.submit class: 'btn btn-primary', id: 'submitChallengeBtn' %>
      </div>
    </div>

  <% end %>
</div>
